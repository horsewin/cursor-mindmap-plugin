{
  "name": "cursor-mindmap",
  "displayName": "Mindmap Editor",
  "description": "Visual mindmap editor for *.mindmap.md files",
  "version": "0.1.1",
  "publisher": "cursor-mindmap",
  "repository": {
    "type": "git",
    "url": "https://github.com/horsewin/cursor-mindmap-plugin"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:cursorMindmap.mindmapEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "cursorMindmap.mindmapEditor",
        "displayName": "Mindmap Editor",
        "selector": [
          {
            "filenamePattern": "*.mindmap.md"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "cursorMindmap.newMindmap",
        "title": "Mindmap: New Mindmap"
      },
      {
        "command": "cursorMindmap.exportSvg",
        "title": "Mindmap: Export as SVG"
      },
      {
        "command": "cursorMindmap.exportMarkdown",
        "title": "Mindmap: Export as Markdown"
      }
    ],
    "configurationDefaults": {
      "workbench.editorAssociations": {
        "*.mindmap.md": "cursorMindmap.mindmapEditor"
      }
    },
    "languages": [
      {
        "id": "mindmap",
        "extensions": [
          ".mindmap.md"
        ],
        "aliases": [
          "Mindmap"
        ]
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx @vscode/vsce package",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
